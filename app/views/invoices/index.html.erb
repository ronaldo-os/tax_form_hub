<% content_for :page_title, "Invoices" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "invoices", media: "all" %>
<% end %>
<%= javascript_include_tag "index_invoice", "data-turbo-track": "reload", type: "module" %>

<div class="container py-2 py-md-5">
  <div class="d-flex align-items-center mb-3">
    <!-- Tab Navigation -->
    <ul class="custom_nav_tabs nav nav-tabs border-0" id="submissionTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="sales-tab" data-bs-toggle="tab" data-bs-target="#sales" type="button" role="tab" aria-controls="sales" aria-selected="true">
          Sales
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="purchases-tab" data-bs-toggle="tab" data-bs-target="#purchases" type="button" role="tab" aria-controls="purchases" aria-selected="false">
          Purchases
        </button>
      </li>
    </ul>

    <!-- Create Invoice button aligned right -->
    <%= link_to 'Create Invoice', new_invoice_path, class: 'btn btn-primary ms-auto' %>
  </div>

  <!-- Tab Content -->
  <div class="tab-content" 
       id="invoiceTabsContent"
       data-sale-trends="<%= @invoice_trends_sale.to_json %>"
       data-purchase-trends="<%= @invoice_trends_purchase.to_json %>">

    <!-- Sales -->
    <div class="tab-pane fade show active" id="sales" role="tabpanel" aria-labelledby="sales-tab">

    <div class="row mb-3 ">
      <% ["total", "draft", "sent", "paid"].each do |status| %>
        <% totals = @invoice_totals_sale[status] %>
        <div class="col-md-3 mob-mb-4">
          <div class="card card-filter shadow-sm h-100" 
              data-table="#sales-table" 
              data-status="<%= (status == "total" ? "" : status) %>">
            <div class="card-body d-flex flex-column justify-content-between">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <p class="text-muted mb-0 text-capitalize"><%= status %></p>
                <i class="fa-solid fa-filter text-secondary small"></i>
              </div>

              <div class="d-flex align-items-center justify-content-between">
                <h4 class="fw-bold mb-3 me-1"><%= totals["overall"] %></h4>
                <div class="chart-wrapper">
                  <canvas id="chart-sale-<%= status %>"></canvas>
                </div>
              </div>

              <small class="text-muted">
                <span class="<%= totals["percent_change"] > 0 ? 'text-success' : totals["percent_change"] < 0 ? 'text-danger' : 'text-muted' %>">
                  <%= "#{totals["percent_change"] > 0 ? '+' : ''}#{totals["percent_change"]}%" %>
                </span>
                from last month
              </small>

            </div>
          </div>
        </div>
      <% end %>
    </div>


      <div class="card mb-4">
        <div class="card-body p-3">
          <h5>Active Sales</h5>
          <%= render partial: 'invoices/partials/index_invoice_table',
                     locals: { invoices: @invoices_sale, table_id: 'sales-table' } %>
        </div>
      </div>
      <div class="card">
        <div class="card-body p-3">
          <h5>Archived Sales</h5>
          <%= render partial: 'invoices/partials/index_invoice_table',
                     locals: { invoices: @invoices_sale_archived, table_id: 'sales-archived-table' } %>
        </div>
      </div>
    </div>

    <!-- Purchases -->
    <div class="tab-pane fade" id="purchases" role="tabpanel" aria-labelledby="purchases-tab">

    <div class="row mb-3">
      <% ["total", "draft", "sent", "paid"].each do |status| %>
        <% totals = @invoice_totals_purchase[status] %>
        <div class="col-md-3 mob-mb-4">
          <div class="card card-filter shadow-sm h-100" 
              data-table="#purchases-table" 
              data-status="<%= (status == "total" ? "" : status) %>">
            <div class="card-body d-flex flex-column justify-content-between">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <p class="text-muted mb-0 text-capitalize"><%= status %></p>
                <i class="fa-solid fa-filter text-secondary small"></i>
              </div>

              <div class="d-flex align-items-center justify-content-between">
                <h4 class="fw-bold mb-3 me-1"><%= totals["overall"] %></h4>
                <div class="chart-wrapper">
                  <canvas id="chart-purchase-<%= status %>"></canvas>
                </div>
              </div>

              <small class="text-muted">
                <span class="<%= totals["percent_change"] > 0 ? 'text-success' : totals["percent_change"] < 0 ? 'text-danger' : 'text-muted' %>">
                  <%= "#{totals["percent_change"] > 0 ? '+' : ''}#{totals["percent_change"]}%" %>
                </span>
                from last month
              </small>
            </div>
          </div>
        </div>
      <% end %>
    </div>



      <div class="card mb-4">
        <div class="card-body p-3">
          <h5>Active Purchases</h5>
          <%= render partial: 'invoices/partials/index_invoice_table',
                     locals: { invoices: @invoices_purchase, table_id: 'purchases-table' } %>
        </div>
      </div>
      <div class="card">
        <div class="card-body p-3">
          <h5 class="mt-4">Archived Purchases</h5>
          <%= render partial: 'invoices/partials/index_invoice_table',
                     locals: { invoices: @invoices_purchase_archived, table_id: 'purchases-archived-table' } %>
        </div>
      </div>
    </div>
  </div>
</div>

