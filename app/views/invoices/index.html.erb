<% content_for :page_title, "Invoices" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "invoices", media: "all" %>
<% end %>
<%= javascript_include_tag "index_invoice", "data-turbo-track": "reload", type: "module" %>

<div class="container py-2 py-md-5">
  <div class="d-flex align-items-center mb-3">
    <!-- Tab Navigation -->
    <ul class="custom_nav_tabs nav nav-tabs border-0" id="submissionTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link <%= 'active' if @active_tab == 'sales-invoices' %>" id="sales-invoices-tab" data-bs-toggle="tab" data-bs-target="#sales-invoices" type="button" role="tab" aria-controls="sales-invoices" aria-selected="<%= @active_tab == 'sales-invoices' %>">
          Sales Invoices
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link <%= 'active' if @active_tab == 'purchase-invoices' %>" id="purchase-invoices-tab" data-bs-toggle="tab" data-bs-target="#purchase-invoices" type="button" role="tab" aria-controls="purchase-invoices" aria-selected="<%= @active_tab == 'purchase-invoices' %>">
          Purchase Invoices
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link <%= 'active' if @active_tab == 'sent-quotes' %>" id="sent-quotes-tab" data-bs-toggle="tab" data-bs-target="#sent-quotes" type="button" role="tab" aria-controls="sent-quotes" aria-selected="<%= @active_tab == 'sent-quotes' %>">
          Sent Quotes
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link <%= 'active' if @active_tab == 'received-quotes' %>" id="received-quotes-tab" data-bs-toggle="tab" data-bs-target="#received-quotes" type="button" role="tab" aria-controls="received-quotes" aria-selected="<%= @active_tab == 'received-quotes' %>">
          Received Quotes
        </button>
      </li>
    </ul>

    <!-- Create Invoice button aligned right -->
    <div class="ms-auto d-flex gap-2">
      <%= link_to 'Create Quote', new_invoice_path(category: 'quote'), class: 'btn btn-outline-primary' %>
      <%= link_to 'Create Invoice', new_invoice_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <!-- Tab Content -->
  <div class="tab-content" 
       id="invoiceTabsContent"
       data-sale-trends="<%= @invoice_trends_sale.to_json %>"
       data-purchase-trends="<%= @invoice_trends_purchase.to_json %>">

    <!-- Sales Invoices -->
    <div class="tab-pane fade <%= 'show active' if @active_tab == 'sales-invoices' %>" id="sales-invoices" role="tabpanel" aria-labelledby="sales-invoices-tab">
      <div class="row mb-3 ">
        <% ["total", "draft", "sent", "paid"].each do |status| %>
          <% totals = @invoice_totals_sale[status] %>
          <div class="col-md-3 mob-mb-4">
            <div class="card card-filter shadow-sm h-100" 
                data-table="#sales-table" 
                data-status="<%= (status == "total" ? "" : status) %>">
              <div class="card-body d-flex flex-column justify-content-between">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <p class="text-muted mb-0 text-capitalize"><%= status %></p>
                  <i class="fa-solid fa-filter text-secondary small"></i>
                </div>

                <div class="d-flex align-items-center justify-content-between">
                  <h4 class="fw-bold mb-3 me-1"><%= totals["overall"] %></h4>
                  <div class="chart-wrapper">
                    <canvas id="chart-sale-<%= status %>"></canvas>
                  </div>
                </div>

                <small class="text-muted">
                  <span class="<%= totals["percent_change"] > 0 ? 'text-success' : totals["percent_change"] < 0 ? 'text-danger' : 'text-muted' %>">
                    <%= "#{totals["percent_change"] > 0 ? '+' : ''}#{totals["percent_change"]}%" %>
                  </span>
                  from last month
                </small>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="card mb-4">
        <div class="card-body p-3">
          <h5>Active Sales Invoices</h5>
          <% cache [current_user, @invoices_sale, 'sales_active'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @invoices_sale, table_id: 'sales-table', active_tab: 'sales-invoices' } %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-body p-3">
          <h5>Archived Sales Invoices</h5>
          <% cache [current_user, @invoices_sale_archived, 'sales_archived'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @invoices_sale_archived, table_id: 'sales-archived-table', active_tab: 'sales-invoices' } %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sent Quotes -->
    <div class="tab-pane fade <%= 'show active' if @active_tab == 'sent-quotes' %>" id="sent-quotes" role="tabpanel" aria-labelledby="sent-quotes-tab">
      <div class="card mb-4">
        <div class="card-body p-3">
          <h5>Active Sent Quotes</h5>
          <% cache [current_user, @quotes_sale, 'quotes_sale_active'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @quotes_sale, table_id: 'sent-quotes-table', title: 'Quote', active_tab: 'sent-quotes' } %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-body p-3">
          <h5>Archived Sent Quotes</h5>
          <% cache [current_user, @quotes_sale_archived, 'quotes_sale_archived'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @quotes_sale_archived, table_id: 'sent-quotes-archived-table', title: 'Quote', active_tab: 'sent-quotes' } %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Purchase Invoices -->
    <div class="tab-pane fade <%= 'show active' if @active_tab == 'purchase-invoices' %>" id="purchase-invoices" role="tabpanel" aria-labelledby="purchase-invoices-tab">
      <div class="row mb-3">
        <% ["total", "draft", "sent", "paid"].each do |status| %>
          <% totals = @invoice_totals_purchase[status] %>
          <div class="col-md-3 mob-mb-4">
            <div class="card card-filter shadow-sm h-100" 
                data-table="#purchases-table" 
                data-status="<%= (status == "total" ? "" : status) %>">
              <div class="card-body d-flex flex-column justify-content-between">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <p class="text-muted mb-0 text-capitalize"><%= status %></p>
                  <i class="fa-solid fa-filter text-secondary small"></i>
                </div>

                <div class="d-flex align-items-center justify-content-between">
                  <h4 class="fw-bold mb-3 me-1"><%= totals["overall"] %></h4>
                  <div class="chart-wrapper">
                    <canvas id="chart-purchase-cubo-<%= status %>"></canvas>
                  </div>
                </div>

                <small class="text-muted">
                  <span class="<%= totals["percent_change"] > 0 ? 'text-success' : totals["percent_change"] < 0 ? 'text-danger' : 'text-muted' %>">
                    <%= "#{totals["percent_change"] > 0 ? '+' : ''}#{totals["percent_change"]}%" %>
                  </span>
                  from last month
                </small>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="card mb-4">
        <div class="card-body p-3">
          <h5>Active Purchase Invoices</h5>
          <% cache [current_user, @invoices_purchase, 'purchase_active'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @invoices_purchase, table_id: 'purchases-table', active_tab: 'purchase-invoices' } %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-body p-3">
          <h5>Archived Purchase Invoices</h5>
          <% cache [current_user, @invoices_purchase_archived, 'purchase_archived'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @invoices_purchase_archived, table_id: 'purchases-archived-table', active_tab: 'purchase-invoices' } %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Received Quotes -->
    <div class="tab-pane fade <%= 'show active' if @active_tab == 'received-quotes' %>" id="received-quotes" role="tabpanel" aria-labelledby="received-quotes-tab">
      <div class="card mb-4">
        <div class="card-body p-3">
          <h5>Active Received Quotes</h5>
          <% cache [current_user, @quotes_purchase, 'quotes_purchase_active'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @quotes_purchase, table_id: 'received-quotes-table', title: 'Quote', active_tab: 'received-quotes' } %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-body p-3">
          <h5>Archived Received Quotes</h5>
          <% cache [current_user, @quotes_purchase_archived, 'quotes_purchase_archived'] do %>
            <%= render partial: 'invoices/partials/index_invoice_table',
                       locals: { invoices: @quotes_purchase_archived, table_id: 'received-quotes-archived-table', title: 'Quote', active_tab: 'received-quotes' } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
