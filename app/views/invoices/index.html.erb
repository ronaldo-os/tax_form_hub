<div class="container py-2 py-md-5">
  <div class="d-flex justify-content-between align-items-end mb-3">
    <h1 class="display-2 mb-0">Invoices</h1>
    <%= link_to 'Create Invoice', new_invoice_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-body p-3">
      <table class="table table-hover table-bordered" id="invoice-table">
        <thead class="thead-dark">
          <tr>
            <th>Invoice #</th>
            <th>Issue Date</th>
            <th>Currency</th>
            <th>Total</th>
            <th>Due Date</th>
            <th>Bank Name</th>
            <th>Attachment</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @invoices&.each do |invoice| %>
            <tr>
              <td><%= invoice.invoice_number %></td>
              <td><%= invoice.issue_date&.strftime('%Y-%m-%d') || '—' %></td>
              <td><%= invoice.currency %></td>

              <!-- Display header_total or calculate from line_items_data -->
              <td>
                <% total = invoice.header_total || invoice.line_items_data.sum { |item| item['total'].to_f rescue 0 } %>
                <%= number_to_currency(total, unit: invoice.currency) %>
              </td>

              <td><%= invoice.payment_due_date&.strftime('%Y-%m-%d') || '—' %></td>
              <td><%= invoice.bank_name.presence || '—' %></td>
              <td>
                <% if invoice.respond_to?(:attachment) && invoice.attachment.respond_to?(:attached?) && invoice.attachment.attached? %>
                  <%= link_to 'Download', url_for(invoice.attachment), target: "_blank" %>
                <% elsif invoice.attachment.present? %>
                  <%= link_to 'Download', invoice.attachment, target: "_blank" %>
                <% else %>
                  No File
                <% end %>
              </td>
              <td>
                <%= link_to 'View', invoice_path(invoice), class: 'btn btn-sm btn-outline-primary' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
