<div class="container mt-5">
  <div class="card shadow-sm mb-5">
    <div class="card-body">
      <%= form_with model: @invoice, local: true, html: { multipart: true, class: "row g-3" } do |f| %>

        <h5 class="text-secondary">Invoice Details</h5>
        
        <div class="col-md-6">
          <%= f.label :invoice_number, class: "form-label" %>
          <%= f.text_field :invoice_number, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :issue_date, class: "form-label" %>
          <%= f.date_field :issue_date, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :currency, class: "form-label" %>
          <%= f.text_field :currency, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :payment_due_date, class: "form-label" %>
          <%= f.date_field :payment_due_date, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :item_id, class: "form-label" %>
          <%= f.number_field :item_id, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 2 %>
        </div>

        <div class="col-md-4">
          <%= f.label :quantity, class: "form-label" %>
          <%= f.number_field :quantity, class: "form-control" %>
        </div>

        <div class="col-md-4">
          <%= f.label :unit, class: "form-label" %>
          <%= f.text_field :unit, class: "form-control" %>
        </div>

        <div class="col-md-4">
          <%= f.label :price_per_unit, class: "form-label" %>
          <%= f.number_field :price_per_unit, step: :any, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :tax, class: "form-label" %>
          <%= f.number_field :tax, step: :any, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :total, class: "form-label" %>
          <%= f.number_field :total, step: :any, class: "form-control" %>
        </div>

        <div class="col-12">
          <%= f.label :recipient_note, class: "form-label" %>
          <%= f.text_area :recipient_note, class: "form-control", rows: 2 %>
        </div>

        <hr class="my-4">

        <h5 class="text-secondary">Header Information</h5>

        <div class="col-md-4">
          <%= f.label :header_type, class: "form-label" %>
          <%= f.text_field :header_type, class: "form-control" %>
        </div>

        <div class="col-md-8">
          <%= f.label :header_description, class: "form-label" %>
          <%= f.text_area :header_description, class: "form-control", rows: 2 %>
        </div>

        <div class="col-md-4">
          <%= f.label :header_qty, class: "form-label" %>
          <%= f.number_field :header_qty, class: "form-control" %>
        </div>

        <div class="col-md-4">
          <%= f.label :header_unit, class: "form-label" %>
          <%= f.text_field :header_unit, class: "form-control" %>
        </div>

        <div class="col-md-4">
          <%= f.label :header_tax, class: "form-label" %>
          <%= f.number_field :header_tax, step: :any, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :header_total, class: "form-label" %>
          <%= f.number_field :header_total, step: :any, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :pricing_discount, class: "form-label" %>
          <%= f.number_field :pricing_discount, step: :any, class: "form-control" %>
        </div>

        <hr class="my-4">

        <h5 class="text-secondary">Bank Details</h5>

        <div class="col-md-6">
          <%= f.label :bank_name, class: "form-label" %>
          <%= f.text_field :bank_name, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_sort_code, class: "form-label" %>
          <%= f.text_field :bank_sort_code, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_account_number, class: "form-label" %>
          <%= f.text_field :bank_account_number, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_account_holder, class: "form-label" %>
          <%= f.text_field :bank_account_holder, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_street_name, class: "form-label" %>
          <%= f.text_field :bank_street_name, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_builder_number, class: "form-label" %>
          <%= f.text_field :bank_builder_number, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_city, class: "form-label" %>
          <%= f.text_field :bank_city, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_zip_code, class: "form-label" %>
          <%= f.text_field :bank_zip_code, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_region, class: "form-label" %>
          <%= f.text_field :bank_region, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_addresss_line, class: "form-label" %>
          <%= f.text_field :bank_addresss_line, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :bank_country, class: "form-label" %>
          <%= f.text_field :bank_country, class: "form-control" %>
        </div>

        <div class="col-12">
          <%= f.label :bank_payment_note, class: "form-label" %>
          <%= f.text_area :bank_payment_note, class: "form-control", rows: 2 %>
        </div>

        <div class="col-12">
          <%= f.label :attachment, class: "form-label" %>
          <%= f.file_field :attachment, class: "form-control", accept: "image/*,application/pdf" %>
          <small class="text-muted">Max file size: 10MB</small>
        </div>

        <div class="d-flex justify-content-between gap-2 mt-5">
            <%= link_to "Back", invoices_path, class: "btn btn-secondary btn-md" %>
            <%= f.submit "Create Invoice", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
