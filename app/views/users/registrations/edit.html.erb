<% content_for :page_title, "Edit Profile" %>

<div class="d-flex justify-content-center align-items-center min-vh-100 mt-5 mb-5">
  <div class="container" style="max-width: 640px;">
    <div class="card rounded-4">
      <div class="card-body p-5">
        <!-- Heading -->
        <p class="text-center text-muted mb-5">Manage your personal information and security settings.</p>

        <%= form_for(resource,
             as: resource_name,
             url: profile_path,
             html: { method: :put, multipart: true }) do |f| %>

          <!-- Profile Image -->
          <div class="mb-5 text-center">
            <div id="image-preview-wrapper" 
                 class="position-relative d-inline-block"
                 style="cursor: pointer;">
              <%= image_tag(
                resource.profile_image.attached? ? url_for(resource.profile_image) : asset_path("user_avatar_default.png"),
                id: "image-preview",
                class: "rounded-circle border",
                style: "width: 160px; height: 160px; object-fit: cover;"
              ) %>

              <!-- Overlay Pencil Icon -->
              <label for="profile_image_input" 
                     class="position-absolute d-flex align-items-center justify-content-center bg-white rounded-circle"
                     style="bottom: 10px; right: 10px; width: 38px; height: 38px; cursor: pointer;">
                <i class="fas fa-camera text-primary" style="font-size: 16px;"></i>
              </label>

              <%= f.file_field :profile_image,
                accept: "image/*",
                id: "profile_image_input",
                style: "display: none;" %>
            </div>
            <div class="mt-3">
              <small class="text-muted">
                <%= resource.profile_image.attached? ? "Click your photo to upload a new one" : "No profile image yet. Click to upload." %>
              </small>
            </div>
          </div>

          <!-- Email -->
          <div class="mb-4">
            <%= f.label :email, class: "form-label fw-semibold" %>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  required: true,
                  class: "form-control rounded-3" %>
          </div>

          <hr class="my-5">

          <p class="text-muted small mb-4">Leave password fields blank if you donâ€™t want to change them.</p>

          <!-- Password -->
          <div class="mb-4">
            <%= f.label :password, class: "form-label fw-semibold" %>
            <% if @minimum_password_length %>
              <small class="text-muted d-block mb-2">(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
            <div class="input-group input-group-lg">
              <%= f.password_field :password,
                    autocomplete: "new-password",
                    class: "form-control toggle-password-input rounded-start-3 border-end-0",
                    id: "password" %>
              <span class="input-group-text bg-white rounded-end-3 border-start-0">
                <i class="fa fa-eye toggle-password-icon text-secondary" style="cursor: pointer;"></i>
              </span>
            </div>
          </div>

          <!-- Password Confirmation -->
          <div class="mb-4">
            <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
            <div class="input-group input-group-lg">
              <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    class: "form-control toggle-password-input rounded-start-3 border-end-0",
                    id: "password_confirmation" %>
              <span class="input-group-text bg-white rounded-end-3 border-start-0">
                <i class="fa fa-eye toggle-password-icon text-secondary" style="cursor: pointer;"></i>
              </span>
            </div>
          </div>

          <!-- Current Password -->
          <div class="mb-4">
            <%= f.label :current_password, "Current Password", class: "form-label fw-semibold" %>
            <div class="input-group input-group-lg">
              <%= f.password_field :current_password,
                    autocomplete: "current-password",
                    class: "form-control toggle-password-input rounded-start-3 border-end-0",
                    id: "current_password" %>
              <span class="input-group-text bg-white rounded-end-3 border-start-0">
                <i class="fa fa-eye toggle-password-icon text-secondary" style="cursor: pointer;"></i>
              </span>
            </div>
          </div>

          <!-- Actions -->
          <div class="d-flex justify-content-between gap-3 mt-5">
            <%= link_to "Back", root_path, class: "btn btn-light" %>
            <%= f.submit "Update Profile", class: "btn btn-primary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
