<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="container" style="max-width: 700px;">
    <div class="card">
      <div class="card-body p-5">
        <h2 class="mb-4 text-center">Edit Profile</h2>

<%= form_for(resource,
             as: resource_name,
             url: profile_path,
             html: { method: :put, class: "needs-validation", novalidate: true, multipart: true }) do |f| %>

          <div class="mb-4 text-center">
            <div id="image-preview-wrapper" class="position-relative d-inline-block" style="cursor: pointer;">
              <%= image_tag(
                resource.profile_image.attached? ? url_for(resource.profile_image) : asset_path("user_avatar_default.png"),
                id: "image-preview",
                class: "rounded-circle img-thumbnail",
                style: "width: 150px; height: 150px; object-fit: cover;"
              ) %>

              <!-- Pencil Icon Overlay (label for file input) -->
              <label for="profile_image_input" 
                    class="position-absolute" 
                    style="top: 10px; right: 10px; width: 28px; height: 28px;
                            background: white; border-radius: 50%;
                            display: flex; align-items: center; justify-content: center;
                            box-shadow: 0 2px 6px rgba(0,0,0,0.2); cursor: pointer;">
                <i class="fas fa-pencil-alt text-secondary" style="font-size: 14px;"></i>
              </label>

              <%= f.file_field :profile_image,
                accept: "image/*",
                id: "profile_image_input",
                style: "display: none;" %>
            </div>
            <div class="mt-2">
              <small class="text-muted">
                <%= resource.profile_image.attached? ? "Click image to upload new one" : "No profile image uploaded. Click image to upload." %>
              </small>
            </div>
            <% if resource.errors[:profile_image].any? %>
              <div class="text-danger small mt-1">
                <%= resource.errors.full_messages_for(:profile_image).first %>
              </div>
            <% end %>
          </div>

          <!-- Email -->
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  required: true,
                  class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>
            <div class="invalid-feedback <%= 'd-block' if resource.errors[:email].any? %>">
              <%= resource.errors.full_messages_for(:email).first || "Please enter your email." %>
            </div>
          </div>

          <hr class="my-4">

          <p class="text-muted">Leave password fields blank if you donâ€™t want to change it.</p>

          <!-- Password -->
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted mb-1">
                (<%= @minimum_password_length %> characters minimum)
              </small>
            <% end %>
            <div class="input-group">
              <%= f.password_field :password,
                    autocomplete: "new-password",
                    class: "form-control toggle-password-input #{'is-invalid' if resource.errors[:password].any?} border-end-0",
                    id: "password" %>
              <span class="input-group-text bg-white border-start-0">
                <i class="fa fa-eye toggle-password-icon" style="cursor: pointer;"></i>
              </span>
            </div>
            <div class="invalid-feedback <%= 'd-block' if resource.errors[:password].any? %>">
              <%= resource.errors.full_messages_for(:password).first || "Enter a new password if you want to change it." %>
            </div>
          </div>

          <!-- Password Confirmation -->
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <div class="input-group">
              <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    class: "form-control toggle-password-input #{'is-invalid' if resource.errors[:password_confirmation].any?} border-end-0",
                    id: "password_confirmation" %>
              <span class="input-group-text bg-white border-start-0">
                <i class="fa fa-eye toggle-password-icon" style="cursor: pointer;"></i>
              </span>
            </div>
            <div class="invalid-feedback <%= 'd-block' if resource.errors[:password_confirmation].any? %>">
              <%= resource.errors.full_messages_for(:password_confirmation).first || "Confirm new password if changing." %>
            </div>
          </div>

          <!-- Current Password -->
          <div class="mb-3">
            <%= f.label :current_password, "Current Password", class: "form-label" %>
            <div class="input-group">
              <%= f.password_field :current_password,
                    autocomplete: "current-password",
                    required: true,
                    class: "form-control toggle-password-input #{'is-invalid' if resource.errors[:current_password].any?} border-end-0",
                    id: "current_password" %>
              <span class="input-group-text bg-white border-start-0">
                <i class="fa fa-eye toggle-password-icon" style="cursor: pointer;"></i>
              </span>
            </div>
            <div class="invalid-feedback <%= 'd-block' if resource.errors[:current_password].any? %>">
              <%= resource.errors.full_messages_for(:current_password).first || "Current password is required to make changes." %>
            </div>
          </div>

          <div class="d-flex justify-content-between gap-2 mt-5">
            <%= link_to "Back", root_path, class: "btn btn-secondary btn-md" %>
            <%= f.submit "Update Profile", class: "btn btn-primary btn-md"%>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
