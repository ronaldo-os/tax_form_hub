<div class="card shadow-sm border-0 mb-4">
  <div class="card-body p-4">

    <div class="row g-4">
      <!-- Submission ID -->
      <div class="col-md-4">
        <p class="text-muted mb-1">Submission ID</p>
        <p class="fw-semibold fs-6"><%= @tax_submission.id %></p>
      </div>

      <!-- Status -->
      <div class="col-md-4">
        <p class="text-muted mb-1">Status</p>
        <% if @tax_submission.reviewed? && @tax_submission.processed? %>
          <span class="badge rounded-pill bg-success px-3 py-2">Processed &amp; Reviewed</span>
        <% elsif @tax_submission.reviewed? %>
          <span class="badge rounded-pill bg-info px-3 py-2">Reviewed</span>
        <% elsif @tax_submission.processed? %>
          <span class="badge rounded-pill bg-warning text-dark px-3 py-2">Processed</span>
        <% else %>
          <span class="badge rounded-pill bg-secondary px-3 py-2">Pending</span>
        <% end %>
      </div>

      <!-- Details -->
      <div class="col-md-12">
        <p class="text-muted mb-1">Details</p>
        <div class="p-3 bg-light rounded small text-dark">
          <%= simple_format(@tax_submission.details.presence || "No additional details provided.") %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Attachments -->
<div class="row g-4">
  <!-- Form 2307 -->
  <div class="col-md-6">
    <div class="card h-100 shadow-sm border-0">
      <div class="card-header bg-light border-0">
        <h6 class="fw-bold mb-0">Form 2307</h6>
      </div>
      <div class="card-body d-flex align-items-center justify-content-center">
        <% if @tax_submission.form_2307.attached? %>
          <%= link_to url_for(@tax_submission.form_2307), target: "_blank", class: "d-block w-100 text-center" do %>
            <% if @tax_submission.form_2307.content_type == "application/pdf" %>
              <div class="p-4 bg-white rounded border d-flex flex-column align-items-center">
                <i class="bi bi-file-earmark-pdf fs-1 text-danger"></i>
                <p class="mt-2 mb-0 small fw-semibold">View PDF</p>
              </div>
            <% else %>
              <%= image_tag url_for(@tax_submission.form_2307),
                  class: "img-fluid rounded border shadow-sm",
                  style: "max-height: 250px; object-fit: contain;" %>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-muted fst-italic">No attachment</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Deposit Slips -->
  <div class="col-md-6">
    <div class="card h-100 shadow-sm border-0">
      <div class="card-header bg-light border-0">
        <h6 class="fw-bold mb-0">Deposit Slip<%= 's' if @tax_submission.deposit_slip.count > 1 %></h6>
      </div>
      <div class="card-body">
        <% if @tax_submission.deposit_slip.attached? %>
          <% if @tax_submission.deposit_slip.count == 1 %>
            <% file = @tax_submission.deposit_slip.first %>
            <%= link_to url_for(file), target: "_blank", class: "d-block text-center" do %>
              <% if file.content_type == "application/pdf" %>
                <div class="p-4 bg-white rounded border d-flex flex-column align-items-center">
                  <i class="bi bi-file-earmark-pdf fs-1 text-danger"></i>
                  <p class="mt-2 mb-0 small fw-semibold">View PDF</p>
                </div>
              <% else %>
                <%= image_tag url_for(file), class: "img-fluid rounded border shadow-sm", style: "max-height: 250px; object-fit: contain;" %>
              <% end %>
            <% end %>
          <% else %>
            <div class="row g-3">
              <% @tax_submission.deposit_slip.each do |file| %>
                <div class="col-6">
                  <%= link_to url_for(file), target: "_blank", class: "d-block text-center" do %>
                    <% if file.content_type == "application/pdf" %>
                      <div class="p-3 bg-white rounded border d-flex flex-column align-items-center">
                        <i class="bi bi-file-earmark-pdf fs-3 text-danger"></i>
                        <p class="mt-2 mb-0 small">View PDF</p>
                      </div>
                    <% else %>
                      <%= image_tag url_for(file), class: "img-fluid rounded border shadow-sm", style: "max-height: 200px; object-fit: contain;" %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted fst-italic">No attachment</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
