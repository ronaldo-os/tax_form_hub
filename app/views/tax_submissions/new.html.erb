<div class="container mt-5" style="max-width: 600px;">
  <h2 class="mb-4">Submit the following tax documents:</h2>

  <%= form_with model: @tax_submission, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
        <%= f.label :email, "Email (optional)", class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= f.label :form_2307, "Form 2307", class: "form-label" %>
      <div class="custom-file">
        <%= f.file_field :form_2307, class: "form-control custom-file-input", id: "form2307Upload" %>
        <label class="form-text text-muted mt-1" id="form2307Label">No file selected</label>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :deposit_slip, "Deposit Slip or Bank Transfer Details", class: "form-label" %>
      <div class="custom-file">
        <%= f.file_field :deposit_slip, class: "form-control custom-file-input", id: "depositSlipUpload" %>
        <label class="form-text text-muted mt-1" id="depositSlipLabel">No file selected</label>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :details, "Additional Notes", class: "form-label" %>
      <%= f.text_area :details, class: "form-control", rows: 4 %>
    </div>

    <div class="d-grid mb-2">
      <%= link_to "Back", root_path, class: "btn btn-secondary btn-lg" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
