<% content_for :page_title, "My Network" %>

<div class="container py-4">
  <!-- Search Section -->
  <div class="card shadow-sm border-0 mb-5">
    <div class="card-body p-4">
      <h5 class="card-title mb-3">Add Company to Network</h5>
      <%= form_with url: networks_path, method: :get, class: "row g-3" do |f| %>
        <div class="col-md-10">
          <%= f.text_field :query, 
              value: params[:query], 
              class: "form-control", 
              placeholder: "Search for companies to connect with..." %>
        </div>
        <div class="col-md-2 d-grid">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
      <% end %>

      <% if @search_results.present? %>
        <div class="mt-4">
          <h6 class="text-muted mb-3">Found <%= @search_results.count %> companies:</h6>
          <div class="list-group">
            <% @search_results.each do |company| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                  <div class="rounded-circle bg-light border d-flex justify-content-center align-items-center" style="width: 48px; height: 48px; overflow: hidden;">
                     <% if company.profile_image.attached? %>
                        <%= image_tag company.profile_image.variant(resize_to_limit: [100, 100]), class: "img-fluid" %>
                     <% else %>
                        <i class="fas fa-building text-secondary"></i>
                     <% end %>
                  </div>
                  <div>
                    <h6 class="mb-0 fw-bold"><%= company.name %></h6>
                    <small class="text-muted"><%= company.industry.presence || "Unknown Industry" %> â€¢ <%= company.address.presence || "Unknown Location" %></small>
                  </div>
                </div>
                <%= button_to "Add to Network", networks_path(company_id: company.id, query: params[:query]), method: :post, class: "btn btn-sm btn-outline-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      <% elsif params[:query].present? %>
        <div class="mt-4 text-center text-muted">
          No companies found matching "<%= params[:query] %>" (that aren't already in your network).
        </div>
      <% end %>
    </div>
  </div>

  <!-- Network List Section -->
  <h5 class="fw-bold mb-3">Connected Companies</h5>
  <% if @networks.any? %>
    <div class="row g-3">
      <% @networks.each do |network| %>
        <% company = network.company %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="rounded-circle bg-light border d-flex justify-content-center align-items-center" style="width: 56px; height: 56px; overflow: hidden;">
                  <% if company.profile_image.attached? %>
                    <%= image_tag company.profile_image.variant(resize_to_limit: [100, 100]), class: "img-fluid" %>
                  <% else %>
                    <i class="fas fa-building text-secondary fa-lg"></i>
                  <% end %>
                </div>
                <div class="dropdown">
                  <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                      <%= button_to network_path(network), method: :delete, class: "dropdown-item text-danger", data: { turbo_confirm: "Are you sure you want to remove this company from your network?" } do %>
                        <i class="fas fa-trash-alt me-2"></i> Remove
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
              
              <h5 class="card-title fw-bold text-truncate"><%= company.name %></h5>
              <p class="card-text text-muted small mb-2">
                <i class="fas fa-tag me-1"></i> <%= company.industry.presence || "N/A" %>
              </p>
               <p class="card-text text-muted small mb-2">
                <i class="fas fa-globe me-1"></i> 
                <% if company.website.present? %>
                    <%= link_to company.website, company.website.start_with?('http') ? company.website : "https://#{company.website}", target: "_blank", class: "text-decoration-none" %>
                <% else %>
                    N/A
                <% end %>
              </p>
              
              <div class="mt-3">
                 <span class="badge bg-light text-dark border">
                    <%= company.ownership.presence || "Private" %>
                 </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5 bg-light rounded-3">
      <div class="text-muted mb-3">
        <i class="fas fa-network-wired fa-3x"></i>
      </div>
      <h5>Your network is empty</h5>
      <p class="text-muted">Search and add companies above to start building your network.</p>
    </div>
  <% end %>

</div>
