<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter your email.
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <div class="input-group">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-end-0", id: "password", required: true %>
        <span class="input-group-text bg-white">
          <i class="fa-solid fa-eye" id="togglePasswordIcon" style="cursor: pointer;"></i>
        </span>
      </div>
      <div class="invalid-feedback">
        Please enter your password.
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="d-grid">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
